<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.khorshed_2207013_gpa_calculator_builder.ResultController">
    <top>
        <VBox spacing="6" styleClass="panel header-panel">
            <Label styleClass="panel-title" text="GPA Award Sheet" />
            <Label styleClass="panel-description" text="A polished recap of your academic progress." />
            <HBox spacing="10">
                <Button onAction="#handleSaveRecord" text="Save Record" styleClass="primary-button" />
                <Button onAction="#handleViewSaved" text="View Saved Records" />
                <Button onAction="#handleBackToEntry" text="Back to Entry" />
                <Button onAction="#handleBackHome" text="Home" textAlignment="JUSTIFY" />
            </HBox>
        </VBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" styleClass="card">
            <content>
                <VBox spacing="20">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                    <HBox spacing="20">
                        <VBox spacing="6" styleClass="summary-card">
                            <Label styleClass="caption" text="Final GPA" />
                            <Label fx:id="gpaValueLabel" styleClass="result-value" text="0.00" />
                        </VBox>
                        <VBox spacing="6" styleClass="summary-card">
                            <Label styleClass="caption" text="Credits Earned" />
                            <Label fx:id="totalCreditsLabel" styleClass="result-value" text="0" />
                        </VBox>
                        <VBox spacing="6" styleClass="summary-card">
                            <Label styleClass="caption" text="Credit Goal" />
                            <Label fx:id="targetCreditsLabel" styleClass="result-value" text="0" />
                        </VBox>
                    </HBox>
                    <VBox spacing="10">
                        <Label styleClass="card-title" text="Course Details" />
                        <VBox fx:id="courseListContainer" spacing="12" />
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
